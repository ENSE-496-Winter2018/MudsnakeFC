@model IEnumerable<WebApplication.Models.Idea>

@{
    ViewBag.Title = "Index";
}

<h2>Home</h2>


@if (Model != null)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Submitted By
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
        <th></th>
    </tr>
 
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("ViewIdea", new {Id = item.Id}))">@Html.DisplayFor(modelItem => item.Id)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @* insert code here for displaying username *@
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <li class="dropdown" style="list-style: none">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Change Status</button>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="@Url.Action("Park", new { id = item.Id })">Park</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Park", new { id = item.Id })">Decline</a>
                        </li>
                        <li class="hz">
                            <a href="@Url.Action("Park", new { id = item.Id })">Plan</a>
                        </li>
                    </ul>
                </li>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Status", "Status", new { id = item.Id }) 
                @if (item.User_id == Convert.ToInt32(Session["UserID"])) {
                    @:|
                    @Html.ActionLink("Delete", "DeleteIdea", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>


}
