
@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>
<hr />
<script>
window.onload = function () {

var chart = new CanvasJS.Chart("chartContainer", {
	theme: "light1", // "light1", "light2", "dark1", "dark2"
	//exportEnabled: true,
	animationEnabled: true,
	title: {
		text: "Approved Ideas by Team",
	},
	data: [{
		type: "pie",
		startAngle: 160,
		toolTipContent: "<b>{label}</b>: {y} Approved",
		indexLabel: "{label} - {y} Approved",
		dataPoints: @Html.Raw(ViewBag.DataPoints1)
	}]

});
chart.render();

var chart2 = new CanvasJS.Chart("chartContainer2", {
	animationEnabled: true,
	theme: "light1", // "light1", "light2", "dark1", "dark2"
	title: {
		text: "Ideas Submitted per Team"
	},
	axisY: {
		title: "No. of Ideas"
	},
	data: [{
		type: "column",
		dataPoints: @Html.Raw(ViewBag.DataPoints2)
	}]
});
    chart2.render();

var chart3 = new CanvasJS.Chart("chartContainer3", {
	animationEnabled: true,
	title: {
		text: "My Team's Status Summary"
	},
	axisY: {
		title: "No. of Ideas",
		gridThickness: 0
	},
	data: [{
		type: "bar",
		indexLabel: "{y}",
		dataPoints: @Html.Raw(ViewBag.DataPoints3)
	}]
});
chart3.render();

var chart4 = new CanvasJS.Chart("chartContainer4", {
	animationEnabled: true,
	theme: "light1", // "light1", "light2", "dark1", "dark2"
	title: {
		text: "Ideas Submitted per Team Member"
	},
	axisY: {
		title: "No. of Ideas"
	},
	data: [{
		type: "column",
		dataPoints: @Html.Raw(ViewBag.DataPoints4)
	}]
});
    chart4.render();

}
</script>
<div>
    <div class="col-md-6">
        <div id="chartContainer" style="height: 370px; width: 100%;"></div>
    </div>
    <div class="col-md-6">
        <div id="chartContainer2" style="height: 370px; width: 100%;"></div>
    </div>
    <br />
    <br />
    @*<h2>My Team's Stats</h2>*@
    <div class="col-md-6" style="padding-top: 50px">
        <div id="chartContainer3" style="height: 370px; width: 100%;"></div>
    </div>
    <div class="col-md-6" style="padding-top: 50px">
        <div id="chartContainer4" style="height: 370px; width: 100%;"></div>
    </div>
</div>



